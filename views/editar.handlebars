<div class="container text-center">
    <div class="row">
        <div class="col bg-white">
            &nbsp;
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col bg-white">
            <h1>Tela de Edição</h1>
            <p>
                  {{#each post}}
                {{#dataValues}}
                <form action="/editar" method="POST">
                     <input type="hidden" name="id" class="form-control" id="id" value="{{id}}"/>
                    <div class="mb-3 text-start">
                        <label class="form-label">Nome:</label>
                        <input type="name" name="nome" class="form-control" id="nome" placeholder="Digite o nome" value="{{nome}}">
                    </div>
                   <div class="mb-3 text-start">
                        <label class="form-label">Endereço:</label>
                        <input type="name" name="endereco" class="form-control" id="endereco" placeholder="Digite o endereco" value="{{endereco}}">
                    </div>
                      <div class="mb-3 text-start">
                        <label class="form-label">Bairro:</label>
                        <input type="name" name="bairro" class="form-control" id="bairro" placeholder="Digite o bairro" value="{{bairro}}">
                    </div>
                      <div class="mb-3 text-start">
                        <label class="form-label">CEP:</label>
                        <input type="number" name="cep" class="form-control" id="cep" placeholder="Digite o cep" value="{{cep}}">
                    </div>
                      <div class="mb-3 text-start">
                        <label class="form-label">Cidade:</label>
                        <input type="name" name="cidade" class="form-control" id="cidade" placeholder="Digite a cidade" value="{{cidade}}">
                    </div>
                      <div class="mb-3 text-start">
                        <label class="form-label">Estado:</label>
                        <input type="name" name="estado" class="form-control" id="estado" placeholder="Digite o estado" value="{{estado}}">
                    </div>
                    <div class="mb-3 text-start">
                        <label class="form-label">Telefone:</label>
                        <input type="number" name="telefone" class="form-control" id="telefone" placeholder="Digite o telefone" value="{{telefone}}">
                    </div>
                    <div class="mb-3 text-start">
                        <button type="submit" class="btn btn-primary">Editar</button>
                    </div>
                </form>
                  {{/dataValues}}
                {{/each}}
            </p>
        </div>
    </div>
</div>    
